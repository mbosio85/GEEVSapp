<div>
  <h2>Login for Data Submission</h2>
  <%= form_tag(:controller => 'users', :action => 'authenticateUser') do %>
    <p>          
      Username:</br> <%= text_field_tag :login_username %>
    </p>
    <p>      
      Password:</br> <%= password_field_tag :login_password, nil %>
    </p>
    <p>
      <%= submit_tag("Login") %>
  	</p>
  <% end %>
</div>